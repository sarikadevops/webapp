pipeline {
agent{
  node{
      label"built-in"
      }
     }
     stages{
            stage('mvn'){
                  steps{
                        sh 'mvn clean install'
                       }
                          }
             stage('deploy'){
              steps{
                 sh 'docker build -t mytomcat .'
                 sh 'docker run -itv /mnt/target:/usr/local/tomcat/webapps -d -p 4050:8080 mytomcat'
                 }
                 }
          }
     }
