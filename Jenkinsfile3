pipeline {
agent{
  node{
      label"built-in"
      }
     }
     stages{
            stage('mvn'){
                  steps{
                        sh 'mvn clean install'
                       }
                          }
              stage('deploy'){
                  steps{
                       sh 'docker run -d --name sarugit1.0 ubuntu:18.04'
                       sh 'docker build -t sarugit1.0 .'
                       sh 'docker run -itd sarugit1.0'
                       sh 'apt-get update'
                       sh 'apt-get install git -y'
                       sh 'git --version'
                       }
                     }
            }
                 
}
